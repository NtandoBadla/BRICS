{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next",
            "config": {
                "distDir": "out"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend"
        }
    ]
}